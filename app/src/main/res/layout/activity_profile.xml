<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Profile.Profile"
    android:background="@color/homepage_background"
    >
  <androidx.cardview.widget.CardView
      android:id="@+id/profile_cardView_back"
      android:layout_width="40dp"
      android:layout_height="40dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginTop="10dp"
      android:layout_marginLeft="10dp"
      app:cardBackgroundColor="@color/homepage_background"
      app:cardCornerRadius="20dp"
      >
    <ImageButton
        android:id="@+id/profile_imageButton_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/profile_arrow_back"
        android:background="@null"

        />
  </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YOUR PROFILE"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/profile_cardView_back"
        app:layout_constraintEnd_toStartOf="@+id/profile_cardView_setting"
        app:layout_constraintStart_toEndOf="@+id/profile_cardView_back"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.cardview.widget.CardView
        android:id="@+id/profile_cardView_setting"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="@color/homepage_background"
        app:cardCornerRadius="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        >
    <ImageButton
        android:id="@+id/profile_imageButton_setting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/profile_setting"
        android:background="@null"
        />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <ImageView
            android:id="@+id/profile_imageView_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"

            app:srcCompat="@drawable/profile_avatar" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/profile_textView_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Heighmerdinger"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <TextView
        android:id="@+id/profile_textView_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Runtera"
        android:textSize="16dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_textView_name" />

    <TextView
        android:id="@+id/profile_textView_followers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:text="12000"
        android:layout_marginTop="7dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_textView_address" />

    <TextView
        android:id="@+id/profile_textView_courses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:layout_marginLeft="80dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/profile_textView_followers"
        app:layout_constraintTop_toTopOf="@+id/profile_textView_followers" />

    <TextView
        android:id="@+id/profile_textView_coins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="342"
        android:layout_marginLeft="80dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/profile_textView_courses"
        app:layout_constraintTop_toTopOf="@+id/profile_textView_courses" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Followers"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/profile_textView_followers"
        app:layout_constraintStart_toStartOf="@+id/profile_textView_followers"
        app:layout_constraintTop_toBottomOf="@+id/profile_textView_followers" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Courses"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/profile_textView_courses"
        app:layout_constraintStart_toStartOf="@+id/profile_textView_courses"
        app:layout_constraintTop_toBottomOf="@+id/profile_textView_courses" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coins"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/profile_textView_coins"
        app:layout_constraintStart_toStartOf="@+id/profile_textView_coins"
        app:layout_constraintTop_toBottomOf="@+id/profile_textView_coins" />

    <Button
        android:id="@+id/profile_button_fix_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/login_custom_button"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Fix your profile"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.391"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView14" />

    <androidx.cardview.widget.CardView
       android:layout_width="0dp"
       android:layout_height="0dp"
       android:layout_margin="10dp"
       app:cardCornerRadius="20dp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/profile_button_fix_profile"
       android:background="@color/homepage_background"
        app:cardBackgroundColor="@color/homepage_background"
       >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/homepage_background"
        >

        <TextView
            android:id="@+id/profile_textView_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INFORMATION"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/profile_textView_work_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Work at"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@+id/profile_textView_information"
            app:layout_constraintTop_toBottomOf="@+id/profile_textView_information" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Main Specialization"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@+id/profile_textView_work_at"
            app:layout_constraintTop_toBottomOf="@+id/profile_textView_work_place" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Birthday"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@+id/textView18"
            app:layout_constraintTop_toBottomOf="@+id/profile_textView_specialization" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About me"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@+id/textView19"
            app:layout_constraintTop_toBottomOf="@+id/textView19" />

        <TextView
            android:id="@+id/profile_textView_work_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="MDC Software, Duy Tan, Cau Giay"
            android:textColor="@color/white"
            android:paddingRight="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/profile_textView_work_at"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline2"

            app:layout_constraintTop_toTopOf="@+id/profile_textView_work_at"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.4" />

        <TextView
            android:id="@+id/profile_textView_specialization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxEms="13"
            android:maxLines="5"
            android:singleLine="false"
            android:text="Android Developer, Backend Developer, AI Engineer"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toTopOf="@+id/textView18" />

        <TextView
            android:id="@+id/profile_textView_birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="12/12/2001"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.078"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toTopOf="@+id/textView19" />

        <TextView
            android:id="@+id/profile_textView_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxEms="13"
            android:singleLine="false"
            android:text="My big dream is to become a talented android developer and have millions applications"
            android:textColor="@color/white"
            android:layout_marginLeft="5dp"
            android:paddingRight="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toTopOf="@+id/textView20" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact me"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@+id/textView20"
            app:layout_constraintTop_toBottomOf="@+id/profile_textView_about" />

        <TextView
            android:id="@+id/profile_textView_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0819019699"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@+id/profile_textView_about"
            app:layout_constraintTop_toTopOf="@+id/textView25" />

    </androidx.constraintlayout.widget.ConstraintLayout>
   </androidx.cardview.widget.CardView>
  <androidx.cardview.widget.CardView
      android:layout_width="50dp"
      android:layout_height="50dp"
      app:cardCornerRadius="25dp"
      app:layout_constraintStart_toEndOf="@+id/profile_button_fix_profile"
      app:layout_constraintTop_toTopOf="@+id/profile_button_fix_profile"
      android:layout_marginLeft="5dp"
      app:cardBackgroundColor="@color/homepage_background"
      >

    <ImageButton
        android:id="@+id/profile_imageButton_add_person"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/profile_person_add"
        android:background="@null"
         />
  </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>