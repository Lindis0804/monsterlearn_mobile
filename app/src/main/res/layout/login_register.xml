<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/purple_background"
    >
    <EditText
        android:id="@+id/login_register_textview_name"
        android:layout_width="match_parent"
        android:hint="Name"
        android:textColorHint="@color/white"
        android:gravity="center|left"
        android:paddingLeft="@dimen/padding_left"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginRight="@dimen/margin_left_right"
        android:textColor="@color/white"
        android:layout_height="@dimen/textview_height"
        android:layout_marginTop="@dimen/margin_top"
        android:background="@drawable/login_custom_textview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/login_register_textview_username"
        android:layout_width="match_parent"
        android:hint="Username"
        android:textColorHint="@color/white"
        android:gravity="center|left"
        android:paddingLeft="@dimen/padding_left"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginRight="@dimen/margin_left_right"
        android:textColor="@color/white"
        android:layout_height="@dimen/textview_height"
        android:layout_marginTop="@dimen/margin_top"
        android:background="@drawable/login_custom_textview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_register_textview_name" />

    <EditText
        android:id="@+id/login_register_textview_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/textview_height"
        android:hint="Password"
        android:textColorHint="@color/white"
        android:gravity="center|left"
        android:paddingLeft="@dimen/padding_left"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginRight="@dimen/margin_left_right"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/margin_top"
        android:background="@drawable/login_custom_textview"
        app:layout_constraintEnd_toEndOf="@+id/login_register_textview_username"
        app:layout_constraintStart_toStartOf="@+id/login_register_textview_username"
        app:layout_constraintTop_toBottomOf="@+id/login_register_textview_username" />

    <EditText
        android:id="@+id/login_register_textview_email"
        android:layout_width="match_parent"
        android:layout_height="@dimen/textview_height"
        android:hint="Email"
        android:textColorHint="@color/white"
        android:gravity="center|left"
        android:paddingLeft="@dimen/padding_left"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginRight="@dimen/margin_left_right"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/margin_top"
        android:background="@drawable/login_custom_textview"
        app:layout_constraintEnd_toEndOf="@+id/login_register_textview_password"
        app:layout_constraintStart_toStartOf="@+id/login_register_textview_password"
        app:layout_constraintTop_toBottomOf="@+id/login_register_textview_password" />

    <EditText
        android:id="@+id/login_register_textview_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/textview_height"
        android:hint="Phone"
        android:textColorHint="@color/white"
        android:gravity="center|left"
        android:paddingLeft="@dimen/padding_left"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginRight="@dimen/margin_left_right"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/margin_top"
        android:background="@drawable/login_custom_textview"
        app:layout_constraintEnd_toEndOf="@+id/login_register_textview_email"
        app:layout_constraintStart_toStartOf="@+id/login_register_textview_email"
        app:layout_constraintTop_toBottomOf="@+id/login_register_textview_email" />

    <Button
        android:id="@+id/login_register_button_register"
        android:layout_width="match_parent"
        android:layout_height="@dimen/textview_height"
        android:text="Register"
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="@dimen/margin_top"
        android:background="@drawable/login_custom_button"
        app:layout_constraintEnd_toEndOf="@+id/login_register_textview_phone"
        app:layout_constraintStart_toStartOf="@+id/login_register_textview_phone"
        app:layout_constraintTop_toBottomOf="@+id/login_register_textview_phone" />

    <TextView
        android:id="@+id/login_register_textview_already_have_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginBottom="@dimen/margin_top"
        android:text="@string/already_have_account_login"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_register_button_register" />

    <Button
        android:id="@+id/button"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:background="@drawable/login_custom_button"
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        android:text="Log in"
        android:textSize="10sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/login_register_textview_already_have_account"
        app:layout_constraintTop_toBottomOf="@+id/login_register_button_register" />
</androidx.constraintlayout.widget.ConstraintLayout>